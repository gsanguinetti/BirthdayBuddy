<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="?attr/actionBarSize">

    <TextView
            android:text="@string/toolbar_title_edit_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_add_fragment_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/btn_add_fragment_close"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete_birthday"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:src="@drawable/ic_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btn_add_fragment_close"
            app:layout_constraintTop_toTopOf="@+id/tv_add_fragment_title"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_fragment_title"
            app:layout_constraintStart_toStartOf="parent"
            android:tint="@color/colorAccent"
            android:layout_marginStart="8dp"/>

    <ImageView
            android:src="@drawable/ic_done"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btn_add_fragment_accept"
            android:tint="@color/colorAccent"
            app:layout_constraintTop_toTopOf="@+id/tv_add_fragment_title"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_fragment_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_delete"
            android:id="@+id/btn_delete_birthday"
            app:layout_constraintEnd_toStartOf="@+id/btn_add_fragment_accept"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@+id/btn_add_fragment_accept"
            app:layout_constraintBottom_toBottomOf="@+id/btn_add_fragment_accept"/>

</android.support.constraint.ConstraintLayout>