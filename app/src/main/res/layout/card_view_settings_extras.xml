<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:contentPadding="4dp"
                                    app:cardElevation="2dp"
                                    app:cardPreventCornerOverlap="true"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    app:cardUseCompatPadding="true">

    <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
                android:text="Delete all data"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:background="@drawable/ripple_recycler_view_item"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_settings_extras_delete_all"
                android:textSize="18sp"
                android:textColor="@color/dark"/>

        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                />

        <TextView
                android:text="Export data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:id="@+id/tv_settings_extra_export"
                android:textColor="@color/dark"
                android:background="@drawable/ripple_recycler_view_item"
                android:clickable="true"
                android:focusable="true"
                android:textSize="18sp"
                tools:text="Export data"/>

        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                />

        <TextView
                android:text="Import data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:background="@drawable/ripple_recycler_view_item"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_settings_extra_import"
                android:textColor="@color/dark"
                android:textSize="18sp"
                tools:text="Import data"/>

    </android.widget.LinearLayout>

</android.support.v7.widget.CardView>