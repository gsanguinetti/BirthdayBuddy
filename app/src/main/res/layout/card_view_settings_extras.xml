                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_export_data"
                    android:layout_marginStart="16dp"/>

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/ic_cloud_upload"
                    android:id="@+id/iv_export_data"
                    app:layout_constraintTop_toTopOf="@+id/tv_settings_extra_export"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_settings_extra_export"
                    app:layout_constraintStart_toStartOf="parent"
