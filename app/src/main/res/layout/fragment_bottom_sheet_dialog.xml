    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/layout_bottom_sheet_choose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_recycler_view_item"
            android:id="@+id/layout_bottom_sheet_delete">


        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_delete"
                android:id="@+id/iv_bottom_sheet_delete"
                android:tint="@color/darkGrey"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textVietv_bottom_sheet_delete_photo"
                app:layout_constraintBottom_toBottomOf="@+id/textVietv_bottom_sheet_delete_photo"
                app:layout_constraintDimensionRatio="1:1" />

        <TextView
                android:text="@string/avatar_btn_clicked_menu_item_delete_photo"
