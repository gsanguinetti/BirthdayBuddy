<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                           xmlns:app="http://schemas.android.com/apk/res-auto"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/ic_birthday_person"
                android:id="@+id/iv_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="Maximilian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_forename"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:textSize="24sp"
                android:textStyle="bold"/>

        <TextView
                android:text="Heykeroth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_surname"
                app:layout_constraintTop_toBottomOf="@+id/tv_forename"
                app:layout_constraintStart_toStartOf="@+id/tv_forename"
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                />

        <TextView
                android:text="Born on 06.02. "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_surname"
                app:layout_constraintStart_toStartOf="@+id/tv_surname"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_note"
                android:textSize="18sp"
                android:text="no note"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_years_old"
                app:layout_constraintStart_toStartOf="@+id/tv_years_old"/>

        <TextView
                android:text="This is in 0 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_days_until"
                app:layout_constraintStart_toStartOf="@+id/tv_date"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_date"
                android:textSize="18sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_years_old"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_days_until"
                app:layout_constraintStart_toStartOf="@+id/tv_days_until"
                android:textSize="18sp"/>

    </android.support.constraint.ConstraintLayout>
</android.widget.ScrollView>